<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/anp_toolbar">

        <com.pharmacy.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_pharmacy"
            android:textSize="@dimen/toolbar_text_size"
            android:textColor="@color/colorWhite"
            app:typeface="robotoRegular"

            />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anp_toolbar"
        android:layout_margin="12dp"
        android:layout_above="@+id/anp_save_new_pharmacy_details"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.pharmacy.RobotoEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pharmacy_name"
                        android:id="@+id/anp_pharmacy_name"
                        android:textSize="@dimen/edit_text_size"
                        android:inputType="text|textCapSentences"

                        app:typeface="robotoRegular"

                        />

                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@drawable/pharmacy_name"
                    android:layout_gravity="bottom"
                    android:tint="@color/colorPrimary"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.pharmacy.RobotoEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/owner_name"
                        android:id="@+id/anp_owner_name"
                        android:textSize="@dimen/edit_text_size"
                        android:inputType="text|textCapSentences"
                        app:typeface="robotoRegular"

                        />


                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@drawable/user_icon"
                    android:layout_gravity="bottom"
                    android:tint="@color/colorPrimary"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.pharmacy.RobotoEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/phone_number"
                        android:id="@+id/anp_phone_number"
                        android:textSize="@dimen/edit_text_size"
                        android:inputType="number"
                        app:typeface="robotoRegular"

                        />


                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@drawable/phone"
                    android:layout_gravity="bottom"
                    android:tint="@color/colorPrimary"/>

            </LinearLayout>






            <com.pharmacy.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_location"
                android:gravity="right"
                android:id="@+id/anp_select_location"
                android:layout_margin="4dp"
                app:typeface="robotoRegular"
                />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.pharmacy.RobotoEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/address"
                            android:textSize="@dimen/edit_text_size"
                            android:inputType="text"
                            android:id="@+id/anp_address"
                            app:typeface="robotoRegular"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@drawable/location"
                        android:layout_gravity="bottom"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.pharmacy.RobotoEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/landmark"
                            android:textSize="@dimen/edit_text_size"
                            android:inputType="text"
                            android:id="@+id/anp_landmark"
                            app:typeface="robotoRegular"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@drawable/landmark"
                        android:layout_gravity="bottom"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.pharmacy.RobotoEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/city"
                            android:textSize="@dimen/edit_text_size"
                            android:inputType="text"
                            android:id="@+id/anp_city"
                            app:typeface="robotoRegular"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@drawable/city"
                        android:layout_gravity="bottom"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.pharmacy.RobotoEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/state"
                            android:textSize="@dimen/edit_text_size"
                            android:inputType="text"
                            android:id="@+id/anp_state"
                            app:typeface="robotoRegular"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@drawable/state"
                        android:layout_gravity="bottom"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.pharmacy.RobotoEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/pincode"
                            android:textSize="@dimen/edit_text_size"
                            android:inputType="number"
                            android:id="@+id/anp_pincode"
                            app:typeface="robotoRegular"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:src="@drawable/pincode"
                        android:layout_gravity="bottom"
                        android:tint="@color/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <com.pharmacy.RobotoEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/door_number"
                        android:inputType="text"
                        android:id="@+id/anp_door_number"
                        android:textSize="@dimen/edit_text_size"
                        app:typeface="robotoRegular"

                        />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@drawable/door_number"
                    android:layout_gravity="bottom"
                    android:tint="@color/colorPrimary"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.pharmacy.RobotoEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email_optional"
                         android:inputType="textEmailAddress"
                        android:id="@+id/anp_email"
                        android:textSize="@dimen/edit_text_size"
                        app:typeface="robotoRegular"

                        />
                </android.support.design.widget.TextInputLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@drawable/email"
                    android:layout_gravity="bottom"
                    android:tint="@color/colorPrimary"/>

            </LinearLayout>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:text="@string/add_new_pharmacy"
                android:textColor="@color/colorWhite"
                android:id="@+id/anp_save_new_pharmacy_details"
                />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
