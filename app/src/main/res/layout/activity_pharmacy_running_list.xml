<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pharmacy.pharmacy.PharmacyRunningList">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/prl_toolbar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pharmacy Name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/toolbar_text_size"
            android:id="@+id/prl_toolbar_heading"
            />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/prl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        android:background="?attr/colorPrimary"
        app:tabGravity="fill"
        app:tabTextColor="@color/colorPrimaryDark"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabIndicatorColor="#ddd"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/prl_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
