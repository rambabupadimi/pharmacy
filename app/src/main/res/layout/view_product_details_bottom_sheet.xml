<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <com.pharmacy.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE"
        app:typeface="robotoLight"
        android:id="@+id/product_detail_delete"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_image"
        android:id="@+id/product_detail_image"
        android:layout_centerHorizontal="true"/>
    <com.pharmacy.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paracetmol"
        app:typeface="robotoLight"
        android:gravity="center"
        android:padding="6dp"
        android:id="@+id/product_detail_title"
        android:layout_below="@+id/product_detail_image"/>
    <com.pharmacy.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paracetmol"
        app:typeface="robotoLight"
        android:gravity="center"
        android:padding="6dp"
        android:layout_below="@+id/product_detail_title"
        android:id="@+id/product_detail_short_description"/>

</RelativeLayout>
